<config>
   <sections>
        <cloudsponge>
            <class>separator-top</class>
            <class>cloudsponge-section</class>
            <label>CloudSponge</label>
            <tab>customer</tab>
            <header_css>cloudsponge-header</header_css>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <hint>
                    <frontend_model>cloudsponge/adminhtml_system_config_fieldset_hint</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </hint>
                <account translate="label">
                    <label>CloudSponge Account</label>
                    <fieldset_css>cloudsponge-config</fieldset_css>
                    <expanded>1</expanded>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>0</sort_order>
                        </enabled>
                        <domain_key translate="label comment">
                            <label>Domain Key</label>
                            <comment><![CDATA[Don't have a CloudSponge account? Simply <a href="https://www.cloudsponge.com/signup?utm_source=eyemagine&utm_medium=partner&utm_campaign=integrator">click here</a> to get started.]]></comment>
                            <demo_url><![CDATA[https://www.cloudsponge.com/test-drive]]></demo_url>
                            <more_url><![CDATA[https://www.cloudsponge.com/product]]></more_url>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>5</sort_order>
                        </domain_key>
                        <domain_password translate="label comment tooltip">
                            <label>Domain Password</label>
                            <comment><![CDATA[]]></comment>
                            <config_path></config_path>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                            <frontend_class></frontend_class>
                        </domain_password>
                    </fields>
                </account>
            </groups>
        </cloudsponge>
    </sections>
</config>
