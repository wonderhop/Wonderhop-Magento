<?xml version="1.0"?>
<config>
    <sections>
        <Wonderhop_Registerqueue translate="label" module="wonderhop_registerqueue">
            <label>Registration Process</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>11</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="wonderhop_registerqueue">
                    <label>General configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <registerqueue_active translate="label">
                           <label>Registration Queue Active</label>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
                        </registerqueue_active>
                        <registerqueue_queue translate="label">
                           <label>Queue Period</label>
                           <comment>Set the duration of queue period, in hours</comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>text</frontend_type>
                        </registerqueue_queue>
                        <registerqueue_invitations_needed translate="label">
                           <label>Invitations Needed</label>
                           <comment>Set the number of invitations needed to finish the queue period</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>text</frontend_type>
                        </registerqueue_invitations_needed>
                    </fields>
                </general>

                <email_template translate="label" module="wonderhop_registerqueue">
                    <label>Email Templates</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <in_queue translate="label">
							<label>In queue</label>
							<comment>Template email used to announce the customer that he has been placed in queue</comment>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
						</in_queue>
                        <queue_finished translate="label">
							<label>Queue finished</label>
							<comment>Template email used to announce that queue is finished</comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
						</queue_finished>
                        <queue_finished_by_invitations translate="label">
							<label>Queue over by Invitations</label>
							<comment>Template email used to announce that queue is finished, because he invited the needed number of friends</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
						</queue_finished_by_invitations>
                    </fields>
                </email_template>

              </groups>
        </Wonderhop_Registerqueue>
    </sections>
</config>
