<?xml version="1.0"?>
 
<config>
    <modules>
        <Wonderhop_Sales>
            <version>0.1.1</version>
        </Wonderhop_Sales>
    </modules>
     <frontend>
        <routers>
           <calendar>
                <use>standard</use>
                <args>
                    <module>Wonderhop_Sales</module>
                    <frontName>calendar</frontName>
                </args>
           </calendar>
           <shops>
                <use>standard</use>
                <args>
                    <module>Wonderhop_Sales</module>
                    <frontName>shops</frontName>
                </args>
           </shops>
           <sales>
				<args>
                    <modules>
					   <wonderhop_sales before="Mage_Sales">Wonderhop_Sales</wonderhop_sales>
				    </modules>
				</args>
		    </sales>
		    <customer>
				<args>
					<modules>
						<wonderhop_customer_sales before="Mage_Customer">Wonderhop_Sales</wonderhop_customer_sales>
					</modules>
				</args>
			</customer>
        </routers> 
        <layout>
            <updates>
                <wonderhop_sales>
                    <file>wonderhop_sales.xml</file>
                </wonderhop_sales>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <Wonderhop_Sales>
                                            <title>Wonderhop Sales</title>
                                            <sort_order>10</sort_order>
                                        </Wonderhop_Sales>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml> 
    <global>
       <helpers>
             <wonderhop_sales>
                <class>Wonderhop_Sales_Helper</class>
             </wonderhop_sales>
        </helpers>
		<resources>
			<wonderhop_sales_setup>
				<setup>
					<module>Wonderhop_Sales</module>
					<class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</wonderhop_sales_setup>
			<wonderhop_sales_write>
				<connection>
					<use>core_write</use>
				</connection>
			</wonderhop_sales_write>
			<wonderhop_sales_read>
				<connection>
					<use>core_read</use>
				</connection>
			</wonderhop_sales_read>
		</resources>
		 <blocks>
            <adminhtml>
                <rewrite>
                    <catalog_category_tab_attributes>Wonderhop_Sales_Block_Adminhtml_Catalog_Category_Tab_Attributes</catalog_category_tab_attributes>
                </rewrite>
            </adminhtml>
            <wonderhop_sales>
                    <class>Wonderhop_Sales_Block</class>
            </wonderhop_sales>
            <wonderhop_login>
                    <class>Wonderhop_Sales_Block_Login_Login</class>
            </wonderhop_login>
            <wonderhop_registered>
                    <class>Wonderhop_Sales_Block_Registered</class>
            </wonderhop_registered>
        </blocks>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <wonderhop_sales before="Mage_Adminhtml">Wonderhop_Sales_Adminhtml</wonderhop_sales>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
 
