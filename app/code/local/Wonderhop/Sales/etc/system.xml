<?xml version="1.0"?>
<config>
    <sections>
        <Wonderhop_Sales translate="label" module="wonderhop_sales">
            <label>Wonderhop Sales</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="wonderhop_sales">
                    <label>General configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sales_newsletter_active translate="label">
                           <label>Active</label>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
                        </sales_newsletter_active>
                        <daily_newsletter_template translate="label">
							<label>Email Template</label>
							<comment>Daily Newsletter</comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
						</daily_newsletter_template>
						<daily_newsletter_run_time translate="label">
                            <label>Run Time</label>
                            <comment>Runs daily at: HH:MM. Seconds are ignored</comment>
                            <frontend_type>time</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </daily_newsletter_run_time>
                    </fields>
                </general>
              </groups>
        </Wonderhop_Sales>
    </sections>
</config>
