<?xml version="1.0"?>
<config>
    <sections>
        <Wonderhop_Sales translate="label" module="wonderhop_sales">
            <label>Wonderhop Sales</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="wonderhop_sales">
                    <label>General configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sales_newsletter_active translate="label">
                           <label>Active</label>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
                        </sales_newsletter_active>
                        <daily_newsletter_template translate="label">
							<label>Email Template</label>
							<comment>Daily Newsletter</comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
						</daily_newsletter_template>
						  <test_active translate="label">
                           <label>Test Mode</label>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_type>select</frontend_type>
                        </test_active>
                        <test_emails translate="label">
							<label>Test Emails</label>
							<comment>If test mode is active emails are sent only to the following comma separated emails.</comment>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<frontend_type>text</frontend_type>
						</test_emails>
                    </fields>
                </general>
              </groups>
        </Wonderhop_Sales>
    </sections>
</config>
