<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php
    $session = Mage::getSingleton('customer/session');
    $customer = $session->getCustomer();
    $ref_id = '';
    $fb_comment_url = '';
    if($session->isLoggedIn() && $customer->getReferralCode()) {
	    $ref_id = '?r=' .$customer->getReferralCode();
    }
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    $_additionalImg = '';
    $_additionalImg2 = '';
    if ($_imgUrl = $_category->getImageUrl()) {
        $_imgHtml = '<div class="category-image"><img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></div>';
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
    
    if ($_imgUrl = $_category->getExtraImageFirst()) {
        $_additionalImg = '<div class="category-image_additional_first"><img src="' . Mage::getBaseUrl ( 'media' ) . DS . "catalog" . DS . "category" . DS .$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></div>';
        $_additionalImg = $_helper->categoryAttribute($_category, $_additionalImg, 'image');
    }
    if ($_imgUrl = $_category->getExtraImageSecond()) {
        $_additionalImg2 = '<div class="category-image_additional_first"><img src="' . Mage::getBaseUrl ( 'media' ) . DS . "catalog" . DS . "category" . DS .$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></div>';
        $_additionalImg2 = $_helper->categoryAttribute($_category, $_additionalImg2, 'image');
    }
?>
<div class="page-title category-title">
    <?php if($this->IsRssCatalogEnable() && $this->IsTopCategory()): ?>
        <a href="<?php echo $this->getRssLink() ?>" class="link-rss"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
    <?php endif; ?>
    <h1><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></h1>
    <h2><?php echo  Wonderhop_Sales_Helper_Data::getCountDown($_category); ?></h2>
</div>

<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<div class="product_images">
    <?php if($_imgUrl): ?>
        <?php echo $_imgHtml ?>
    <?php endif; ?>

    <?php if($_additionalImg): ?>
        <?php echo $_additionalImg ?>
    <?php endif; ?>
    <?php if($_additionalImg2): ?>
        <?php echo $_additionalImg2 ?>
    <?php endif; ?>
</div>
<?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
    <div class="small_description">
        <b><?php echo $this->getCurrentCategory()->getSaleDescription(); ?></b>
    </div>
    <div class="category-description std">
        <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
        <?php $fb_comment_url = $_category->getUrl() . $ref_id; ?>
         <ul class="social_share">
                <li>
                    <div onclick="post_on_wall();" class="fb-share"><a name="fb_share" type="icon_link" share_url="<?php echo $fb_comment_url; ?>"></a>
                        </div>
                 </li>
               <li>
               <?php error_log($fb_comment_url); ?>
                   <div class="twitter-share">
                     <a href="https://twitter.com/share" data-url="<?php echo $fb_comment_url; ?>" class="twitter-share-button" data-lang="en">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                   </div>
               </li>
                <li>Share to earn cash</li>
        </ul>
    </div>
     <script type="text/javascript">
	            function post_on_wall() {
		            url = 'http://www.facebook.com/sharer.php?u=<?php echo $fb_comment_url ?>&t=<?php echo $fb_comment_url ?>';
		            window.open(url, "Post on Wall", "width=780, height=410, toolbar=0, scrollbars=0, status=0, resizable=0, location=0, menuBar=0, left=0, top=0");
	            }
    </script>
    <?php endif; ?>

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
