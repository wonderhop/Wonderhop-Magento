if (Mage::helper('customercredit')->isDisplayCreditBlockAtCart()): ?>
    <div class="credit-payment box discount">
        <h4><?php echo $this->__('Payment with Credit') ?></h4>
        <?php if($this->getUseInternalCredit()) { ?>
            <?php echo $this->__('You are using your credit to pay this order.')?><br/>
            <a href="<?php echo $this->getUrl('customercredit/index/removeCreditUse')?>"><?php echo $this->__("Don't use credit.")?></a>
        <?php } elseif ($this->isPartialPayment()>0) { ?>
            <form action="<?php echo $this->getUrl('customercredit/index/updateCreditPost') ?>" method="post" id="credit-payment">
                <p><?php echo $this->__('Available credit amount is %s.', Mage::helper('core')->currency($this->getCreditValue())) ?></p>
                <button type="submit" class="button"><span><span><?php echo $this->__('Use Credit') ?></span></span></button>
            </form>
        <?php } else { ?>
            <p><?php echo $this->__('Available credit amount is %s.', Mage::helper('core')->currency($this->getCreditValue())) ?> <?php echo $this->__('Your credit amount is not enough.') ?></p>
            <button type="button" class="button" onclick="setLocation('<?php echo $this->getUrl('customercredit/')?>')"><span><span><?php echo $this->__('Get Credit') ?></span></span></button>
        <?php } ?>
    </div>
<?php endif;