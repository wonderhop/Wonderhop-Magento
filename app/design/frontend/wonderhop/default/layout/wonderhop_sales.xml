<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <default>
        <reference name="head">
			<action method="addCss"><stylesheet>css/sales/sales.css</stylesheet></action>
			<action method="addItem"><type>skin_js</type><name>js/sales/sales.js</name></action>
		</reference>
        <reference name="content">
			<block type="wonderhop_sales/sales" name="wonderhop_sales" template="wonderhop/sales/index.phtml" />
		</reference> 
    </default>
	<sales_index_index>
		<reference name="head">
			<action method="addCss"><stylesheet>css/sales/sales.css</stylesheet></action>
			<action method="addItem"><type>skin_js</type><name>js/sales/sales.js</name></action>
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="wonderhop_sales/sales" name="wonderhop_sales" template="wonderhop/sales/index.phtml" />
		</reference> 
	</sales_index_index>
	<customer_logged_out>
	    <reference name="head">
	        <action method="addItem"><type>skin_js</type><name>js/sales/login_popup.js</name></action>3
	        <action method="addItem"><type>skin_js</type><name>js/sales/dialog.js</name></action>
	        <action method="addCss"><stylesheet>css/sales/login_popup.css</stylesheet></action>
	    </reference>
	    <reference name="content">
			<block type="wonderhop_sales/login_login" name="wonderhop_login" template="wonderhop/sales/login.phtml" />
		</reference> 
	</customer_logged_out>
</layout>
